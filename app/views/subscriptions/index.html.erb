<div class="container-fluid">
  <h1 class="display-4 text-xs-center m-y-3 text-muted">MeowBox</h1>
        <ul class="list-group">

          <li class="list-group-item">
            <h4 class="list-group-item-heading">
              <% if current_user.try(:subscriber?) %>
                <%= link_to "Visit your profile", user_path(current_user) %>
              <% else %>
                <h5>Menu: </h5>
              <% end %>
            </h4>
          </li>

          <li class="list-group-item">
            <div class="subscriptions-index">
              <h4>Click <%= link_to "here", subscriptions_path, class: 'view-subscriptions' %> to see all available subscriptions</h4>
            </div>
          </li>

          <li class="list-group-item">
            <h4 class="list-group-item-heading">
              <%= link_to "See our boxes", boxes_path %>
            </h4>
          </li>

          <% if current_user.try(:admin?) %>
            <li class="list-group-item">
              <h4 class="list-group-item-heading">
                <%= link_to "See user information", users_path %>
              </h4>
            </li>

            <li class="list-group-item">
              <h4 class="list-group-item-heading">
                <%= link_to "Create a new box", new_box_path %>
              </h4>
            </li>
          <% end %>

        </ul>

</div><!-- end container -->

